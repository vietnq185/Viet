{
  "name": "rest-api",
  "version": "2.0.0",
  "description": "A Boilerplate application for building REST APIs using express, postgres in ES6 with code coverage",
  "author": "Kunal Kapadia <kunalkapadia12@gmail.com>",
  "main": "index.js",
  "private": false,
  "engines": {
    "node": ">=6.9.1",
    "npm": ">=3.10.8",
    "yarn": ">=0.21.3"
  },
  "scripts": {
    "start": "pm2 start --attach index.js",
    "dev": "cross-env DEBUG=rest-api:* nodemon -x  \"babel-node\" index.js",
    "start:no-debug": "gulp serve",
    "start:debug": "cross-env DEBUG=rest-api:* yarn start:no-debug",
    "build": "gulp",
    "lint": "esw *.js server config --color",
    "lint:watch": "yarn lint -- --watch",
    "test": "cross-env NODE_ENV=test ./node_modules/.bin/mocha --ui bdd --reporter spec --colors --compilers js:babel-core/register server/tests --recursive",
    "test:watch": "yarn test -- --watch",
    "test:coverage": "cross-env NODE_ENV=test ./node_modules/.bin/istanbul cover _mocha -- --ui bdd --reporter spec --colors --compilers js:babel-core/register server/tests --recursive",
    "test:check-coverage": "yarn test:coverage && istanbul check-coverage",
    "report-coverage": "coveralls < ./coverage/lcov.info"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:KunalKapadia/rest-api.git"
  },
  "keywords": [
    "express",
    "node",
    "node.js",
    "postgres",
    "es6",
    "mocha",
    "istanbul",
    "REST",
    "API",
    "boilerplate"
  ],
  "dependencies": {
    "bluebird": "3.5.0",
    "body-parser": "1.17.1",
    "compression": "1.6.2",
    "cookie-parser": "1.4.3",
    "cors": "2.8.1",
    "crypto-js": "3.1.9-1",
    "debug": "^2.4.5",
    "dotenv": "^4.0.0",
    "express": "4.15.2",
    "express-jwt": "5.1.0",
    "express-validation": "1.0.2",
    "express-winston": "2.3.0",
    "helmet": "3.5.0",
    "http-status": "^1.0.1",
    "joi": "10.3.0",
    "jsonwebtoken": "7.3.0",
    "method-override": "^2.3.5",
    "morgan": "1.8.1",
    "pg": "6.1.5",
    "pg-connection-string": "0.1.3",
    "pg-escape": "0.2.0",
    "sql-template-strings": "2.2.2",
    "stripe": "^4.18.0",
    "uuid": "3.0.1",
    "winston": "2.3.1"
  },
  "devDependencies": {
    "babel-cli": "6.24.0",
    "babel-core": "6.24.0",
    "babel-plugin-add-module-exports": "0.2.1",
    "babel-preset-es2015": "6.24.0",
    "babel-preset-stage-2": "6.22.0",
    "chai": "^3.4.1",
    "commitizen": "^2.9.2",
    "coveralls": "^2.11.6",
    "cross-env": "3.2.4",
    "cz-conventional-changelog": "2.0.0",
    "del": "^2.2.0",
    "eslint": "3.18.0",
    "eslint-config-airbnb-base": "11.1.1",
    "eslint-plugin-import": "2.2.0",
    "eslint-watch": "3.0.1",
    "gulp": "3.9.1",
    "gulp-babel": "6.1.2",
    "gulp-load-plugins": "^1.2.0",
    "gulp-newer": "^1.1.0",
    "gulp-nodemon": "^2.0.6",
    "gulp-sourcemaps": "^2.4.1",
    "gulp-util": "^3.0.7",
    "husky": "^0.13.1",
    "istanbul": "1.1.0-alpha.1",
    "mocha": "3.2.0",
    "nodemon": "1.11.0",
    "run-sequence": "^1.1.5",
    "supertest": "3.0.0",
    "supertest-as-promised": "4.0.2",
    "validate-commit-msg": "^2.6.1"
  },
  "license": "MIT",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-2"
    ],
    "plugins": [
      "add-module-exports"
    ]
  }
}
